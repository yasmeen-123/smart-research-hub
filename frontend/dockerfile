# Use Node.js base image
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files first
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy rest of the code
COPY . .

# Build Tailwind CSS (important!)
RUN npx tailwindcss -i ./styles/globals.css -o ./styles/output.css --minify || true

# Expose port
EXPOSE 3000

# Set default API base URL (can be overridden by docker-compose)
ENV NEXT_PUBLIC_API_BASE=http://backend:8000

# Run Next.js app
CMD ["npm", "run", "dev"]
